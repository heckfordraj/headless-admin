{
  "rules": {
    "pages": {
      "$page": {
        ".validate":
          "newData.hasChildren(['id', 'name', 'dataId', 'revisions', 'lastModified']) && newData.child('id').val() == $page",
        "id": {
          ".validate": "newData.isString()"
        },
        "name": {
          ".validate": "newData.isString()"
        },
        "dataId": {
          ".validate": "newData.isString()"
        },
        "revisions": {
          ".validate": "newData.hasChildren(['currentId'])",
          "currentId": {
            ".validate": "newData.isString()"
          },
          "publishedId": {
            ".validate": "newData.isString()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        "lastModified": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".write":
          "data.val() == null && (data.val() == null || data.child('dataId').val() == newData.child('dataId').val()) || data.val() != null && newData.val() != null && (data.val() == null || data.child('dataId').val() == newData.child('dataId').val()) || data.val() != null && newData.val() == null"
      },
      ".read": "true"
    },
    "data": {
      "$pageId": {
        "$revisionId": {
          "$blockId": {
            ".validate":
              "newData.hasChildren(['id', 'type', 'order']) && newData.child('id').val() == $blockId",
            "id": {
              ".validate": "newData.isString()"
            },
            "type": {
              ".validate": "newData.isString()"
            },
            "data": {
              ".validate": "newData.hasChildren()"
            },
            "order": {
              ".validate": "newData.isNumber()"
            },
            "$other": {
              ".validate": "false"
            },
            ".indexOn": ["order"]
          }
        }
      },
      ".read": "true",
      ".write": "true"
    },
    "content": {
      "$version": {
        ".validate": "newData.hasChildren(['clientID', 'steps', 'version'])",
        "clientID": {
          ".validate": "newData.isNumber()"
        },
        "steps": {
          ".validate": "newData.hasChildren()"
        },
        "version": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "true",
        ".write": "true"
      },
      ".read": "true"
    }
  }
}
